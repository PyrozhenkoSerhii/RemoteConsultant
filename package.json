{
  "name": "remote-advisor",
  "version": "1.0.0",
  "description": "There is a platform to replace a full-time staff consulatant with a part-time online consultant",
  "main": "main.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "client-dev": "better-npm-run client-dev",
    "client-build": "better-npm-run client-build",
    "client-test": "better-npm-run client-test",
    "server-dev": "better-npm-run server-dev",
    "server-prod": "better-npm-run server-prod-pm-2",
    "server-test": "better-npm-run server-test"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec babel-node server/server.js",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "client-dev": {
      "command": "webpack-dev-server --mode development --devtool inline-source-map --hot"
    },
    "client-build": {
      "command": "webpack-dev-server --mode production"
    },
    "client-test": {
      "command": "jest"
    },
    "server-dev": {
      "command": "nodemon --exec babel/node server/server.js",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "server-prod-pm2": {
      "command": "pm2 start src/server.js --interpreter ./node_modules/.bin/babel-node",
      "env": {
        "NODE_ENV": "prod"
      }
    },
    "server-test": {
      "command": "mocha --require @babel/register --require mocha-clean --timeout 5000 ./tests/server/*.test.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "author": "Serhii Pyrozhenko",
  "license": "unlicensed",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "better-npm-run": "^0.1.1",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "image-webpack-loader": "^4.6.0",
    "mocha": "^5.2.0",
    "mocha-clean": "^1.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "async": "^2.6.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bson": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-brute": "^1.0.1",
    "express-jwt": "^5.3.1",
    "express-jwt-blacklist": "^1.1.0",
    "express-rate-limit": "^3.3.2",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.10",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-timestamp": "^0.6.0",
    "node-sass": "^4.11.0",
    "nodemailer": "^5.1.1",
    "nodemon": "^1.18.9",
    "react": "^16.7.0",
    "react-alert": "^4.0.4",
    "react-alert-template-basic": "^1.0.0",
    "react-bootstrap": "^1.0.0-beta.5",
    "react-dom": "^16.7.0",
